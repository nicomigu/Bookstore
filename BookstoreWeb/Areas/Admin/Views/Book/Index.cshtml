<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>&nbsp; Create New Book</a>
        </div>
    </div>
</div>
<br />

<table class="table" id="tblData" table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Price</th>
            <th>ISBN</th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/book.js"></script>
}
