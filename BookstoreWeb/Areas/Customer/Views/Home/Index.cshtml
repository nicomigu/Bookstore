@model IEnumerable<Book>

<div class="row pb-3">
    @foreach(var book in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid; border-radius: 5px">
                    <div class="card">
                        <img src="@book.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@book.Title</p>
                                <p class="card-title text-info">by <b>@book.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p> Price: <b>$@book.Price.ToString("0.00")</b></p>
                            </div>
                            <div class="pl-1">
                                <p> As Low as: <b>$@book.Price200.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-bookId="@book.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
